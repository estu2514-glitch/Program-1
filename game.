def main_game():
    print("=" * 70)
    print("SELAMAT DATANG DI GAME TEBAK MAKANAN INDONESIA!")
    print("=" * 70)
    print("\nPetunjuk Bermain:")
    print("1. Program akan memilih satu makanan Indonesia secara acak")
    print("2. Anda akan diberikan clue untuk menebak makanan tersebut")
    print("3. Ketikkan nama makanan yang Anda tebak")
    print("4. Jika benar, Anda akan menang!")
    print("5. Jika terlalu sulit, ketik 'menyerah' untuk menyerah!")
    print("6. Jika salah, akan ada clue yang lebih detail dan spesifik!\n")
    
    # Memilih makanan secara acak
    makanan_rahasia = random.choice(list(makanan_dan_clue.keys()))
    clue_data = makanan_dan_clue[makanan_rahasia]
    
    # Hitung jumlah huruf dan kata
    jumlah_huruf = len(makanan_rahasia.replace(" ", ""))
    jumlah_kata = len(makanan_rahasia.split())
    
    print("=" * 70)
    print("CLUE MAKANAN:")
    print(f"{clue_data['umum']}")
    print("-" * 70)
    print(f"ğŸ“Š Jumlah kata: {jumlah_kata} | Jumlah huruf: {jumlah_huruf}")
    print("=" * 70)
    print()
    
    # Loop untuk menebak
    kesempatan = 0
    clue_diberikan = False
    clue_count = 0
    
    # List clue alternatif yang bervariasi
    clue_alternatif = [
        f"ğŸ’¡ Makanan ini terdiri dari {jumlah_kata} kata dan {jumlah_huruf} huruf",
        f"ğŸ’¡ Coba pikirkan makanan dari daerah Indonesia yang terkenal",
        f"ğŸ’¡ Perhatikan deskripsi tentang tekstur, rasa, dan cara penyajiannya",
        f"ğŸ’¡ Makanan ini sering dimakan dan disukai banyak orang di Indonesia"
    ]
    
    while True:
        kesempatan += 1
        tebakan = input(f"Tebakan ke-{kesempatan} (atau ketik 'menyerah'): ").strip().lower()
        
        # Opsi menyerah
        if tebakan == "menyerah":
            print()
            print("=" * 70)
            print("ğŸ˜¢ ANDA MENYERAH!")
            print(f"Jawaban yang benar adalah: {makanan_rahasia.upper()}")
            print(f"Anda melakukan {kesempatan - 1} tebakan sebelum menyerah.")
            print("=" * 70)
            print()
            return False
        
        if tebakan == makanan_rahasia:
            print()
            print("ğŸ‰ " * 15)
            print("SELAMAT!! KAMU BERHASIL! ğŸ‰")
            print(f"Makanan yang benar adalah: {makanan_rahasia.upper()}")
            print(f"Anda berhasil menebak dalam {kesempatan} kesempatan!")
            print("ğŸ‰ " * 15)
            return True
        else:
            print(f"âŒ Salah! '{tebakan}' bukan jawaban yang benar.")
            
            # Berikan clue spesifik saat terjawab salah
            if not clue_diberikan:
                print(clue_data['spesifik'])
                print(f"ğŸ“Š HINT: Jumlah kata: {jumlah_kata} | Jumlah huruf: {jumlah_huruf}")
                clue_diberikan = True
            else:
                # Tampilkan clue bervariasi agar tidak monoton
                if clue_count < len(clue_alternatif):
                    print(clue_alternatif[clue_count])
                    clue_count += 1
                else:
                    print(f"ğŸ’¡ CLUE ULANG: {clue_data['umum']}")
                print(f"ğŸ“Š HINT: Jumlah kata: {jumlah_kata} | Jumlah huruf: {jumlah_huruf}")
            
            print("Coba lagi!\n")

# Main Program
if __name__ == "__main__":
    while True:
        hasil = main_game()
        
        while True:
            main_lagi = input("\nApakah ingin bermain lagi? (y/n): ").lower()
            if main_lagi == 'y':
                print("\n")
                break
            elif main_lagi == 'n':
                print("\nğŸ‘‹ Terima kasih telah bermain! Sampai jumpa lagi!")
                exit()
            else:
                print("âŒ Input tidak valid. Silakan masukkan 'y' atau 'n'.\n")
